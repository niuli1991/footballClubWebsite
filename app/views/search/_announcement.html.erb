<thead>
	<th>公告标题</th>
	<th>公告类型</th>
	<th>创建时间</th>
	<% if user_signed_in? %>
	<th>创建人</th>
	<th>操作</th>
	<%end%></thead>
<tbody>
	<% @search.each do |announcement|%>
	<tr>
		<td>
			<%= link_to announcement.annou_title, announcement %></td>
		<td>
			<%= announcement.annou_type%></td>
		<td>
			<%= time_ago_in_words(announcement.created_at)%></td>
		<% if user_signed_in? %>
		<td>
			<%= announcement.user_id%></td>
		<td>
			<%= link_to "编辑", edit_announcement_path(announcement)%>
			<%= link_to "删除", announcement, method: :delete, data: {confirm: 'Are you sure?'}%></td>
		<%end%></tr>
	<% end %></tbody>