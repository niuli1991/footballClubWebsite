<%= form_tag(@user) do |f|, class: "form-horrizontal"%>
	<% if @user.error.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@user.errors.count, "error") %>禁止当前用户表单创建：</h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="form-group">
		<%= f.label :email, "电子邮箱", class: "col-sm-2 control-label"%>
		<div class="col-sm-10">
			<%= f.text_field :email%>
		</div>
	</div>

<% end %>