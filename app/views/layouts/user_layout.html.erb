<!DOCTYPE html>
<html>
<head>
	<title>FootballClubWebsite</title>
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' =>
	true %>
	<%= stylesheet_link_tag    'application', media: 'all', 'bootstrap-datetimepicker.min.css' =>
	true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' =>
	true %>
	<%= javascript_include_tag 'application', 'bootstrap-datetimepicker.min.js' =>
	true %>
	<%= csrf_meta_tags %>
	</head>
<body>
	<nav class="navbar navbar-default navbar-static-top"  style="margin:0">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<%= link_to '首页', root_path, class: 'navbar-brand' %></div>
			<div class="collapse navbar-collapse">
				<ul class="nav navbar-nav">
					<% if user_signed_in? %>
					<li class="">
						<%= link_to '注销', destroy_user_session_path, :method=>'delete' %></li>
					<% end %>
					<% if user_signed_in? %>
					<% if current_user.admin?%>
					<li class="">
						<%= link_to '用户', users_path %></li>
					<% end %>
					<% end %></ul>
				<ul class="nav navbar-nav navbar-right">
					<% if user_signed_in? %>
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
							其他
							<span class="caret"></a>
							<ul class="dropdown-menu">
								<li>
									<%= link_to "赛事管理",  "#"%>
