									<%= link_to "个人资料", edit_user_registration_path %></li>
							</ul>
						</li>
						<% end %></ul>
				</div>
				
					<%= render 'layouts/messages' %>
				</div>
			</nav>
			<div class="container">
				<%= yield %>
			</div>
         
			</body>
		</html>