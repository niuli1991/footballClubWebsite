<h3>赛事信息</h3>
    <div class="row">
    	<div class="col-xs-4">
    		<%= image_tag @match.host_image, alt: @match.host_team, width: "120px", height: "120px"%>
    	</div>
    	<div class="col-xs-4" align="center">
    		<h2 >VS</h2>
    		<%= label_tag :kick_of_time, @match.kick_of_time.strftime("%Y-%m-%d %H:%M"), id: "kick_of_time" %>
    	</div>
    	<div class="col-xs-4">
    		<%= image_tag @match.guest_image, alt: @match.guest_team, width: "120px", height: "120px"%>
    	</div>
    </div>
    <div align="center">
		<h4>倒计时</h4>

		<input type="hidden" id="kick_of_time" />
		<div id="DateCountdown" data-date="2016-03-06 00:00:00" style="width: 300px; height: 100px; padding: 0px; box-sizing: border-box; "></div>
	</div>
    
    

<script type="text/javascript">
	$(function(){
		var datetime = $("#kick_of_time").text();
		$("#DateCountdown").data('date', datetime).TimeCircles().start();
	})
</script>